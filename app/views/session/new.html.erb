<% content_for :central_column do %>
  <div class="container mt-5">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Welcome to The Cloud Library.</h5>
        <p>Please log in:</p>
        <%= bootstrap_form_tag url: '/login' do |f| %>
          <%= f.text_field :username, placeholder: 'Your username', label_class: "text-primary mt-4" %>
          <%= f.password_field :password, placeholder: 'Your password', label_class: "text-primary mt-4" %>
          <%= f.submit "Login", class: "btn btn-primary mt-4"%>
          <%= link_to "Cancel", { :controller => "welcome", :action => "index" }, class: "btn btn-secondary mt-4", "role" => "button" %>
        <%end%>
      </div>
      <% if @errors %>
        <div class="container">
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error</strong> Unknown user or wrong password.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<%= render "layouts/shared/threecolumns" %>
