<% content_for :body do %>
  <div class="container">
    <div class="row col">
      <div class="container mt-2">
        <h2>Author</h2>
        <form>
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" value="<%= @author.name %>" readonly>
          </div>
          <div class="mb-3">
            <label for="surname" class="form-label">Surname</label>
            <input type="text" class="form-control" id="surname" value="<%= @author.surname %>" readonly>
          </div>
          <div class="mb-3">
            <label for="nationality" class="form-label">Nationality</label>
            <input type="text" class="form-control" id="nationality" value="<%= @author.nationality %>" readonly>
          </div>
          <%= link_to "Back to Authors List", { :controller => "authors", :action => "index"} , class: "btn btn-secondary mt-4" %>
        </form>
      </div>
    </div>
  </div>
<% end %>

<%= render "layouts/shared/cloudlibrary" %>
