<% content_for :central_column do %>
  <div class="container mt-5">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Welcome to The Cloud Library.</h5>
        <p>Please register:</p>
          <%= bootstrap_form_for @user do |f| %>
            <%= f.text_field :username, placeholder: 'Choose your username', required: true, label_class: "text-primary mt-4" %>
            <%= f.password_field :password, placeholder: 'Choose your password', required: true, label_class: "text-primary mt-4" %>
            <%= f.password_field :password_confirmation, placeholder: 'Re-type your password', required: true, label_class: "text-primary mt-4" %>
            <%= f.submit "Register", class: "btn btn-primary mt-4" %>
            <input class="btn btn-secondary mt-4" id="cancel" name="cancel" type="button" value="Cancel">
          <%end%>
        </div>
      </div>
  </div>
<% end %>

<%= render "layouts/shared/threecolumns" %>
